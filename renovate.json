{
  "extends": [
    "config:recommended",
    "schedule:quarterly"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false
    },
    {
      "groupName": "node",
      "enabled": false,
      "matchPackageNames": [
        "node"
      ]
    },
    {
      "groupName": "@actions",
      "matchPackageNames": [
        "@actions/*"
      ]
    }
  ]
}
